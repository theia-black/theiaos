{
  "name": "@theiaos/matrix",
  "version": "2026.2.18",
  "description": "TheiaOS Matrix channel plugin",
  "type": "module",
  "dependencies": {
    "@matrix-org/matrix-sdk-crypto-nodejs": "^0.4.0",
    "@vector-im/matrix-bot-sdk": "0.8.0-element.3",
    "markdown-it": "14.1.1",
    "music-metadata": "^11.12.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "theiaos": "workspace:*"
  },
  "theiaos": {
    "extensions": [
      "./index.ts"
    ],
    "channel": {
      "id": "matrix",
      "label": "Matrix",
      "selectionLabel": "Matrix (plugin)",
      "docsPath": "/channels/matrix",
      "docsLabel": "matrix",
      "blurb": "open protocol; install the plugin to enable.",
      "order": 70,
      "quickstartAllowFrom": true
    },
    "install": {
      "npmSpec": "@theiaos/matrix",
      "localPath": "extensions/matrix",
      "defaultChoice": "npm"
    }
  }
}
